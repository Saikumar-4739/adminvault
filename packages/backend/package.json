{
  "name": "@org/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "vite build",
          "cwd": "packages/backend"
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node dist/packages/backend/main.js",
          "cwd": "."
        },
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "scripts": {
    "start": "node ../../dist/packages/backend/main.js"
  },
  "dependencies": {
    "@adminvault/backend-utils": "*",
    "dotenv": "^17.2.3",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.14",
    "@nestjs/testing": "^11.0.0",
    "nodemon": "^3.1.11"
  }
}