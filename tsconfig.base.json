{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "@org/source"
    ],
    "paths": {
      "@adminvault/shared-models": [
        "./packages/libs/shared-models/src/index.ts"
      ],
      "@adminvault/backend-utils": [
        "./packages/libs/backend-utils/src/index.ts"
      ],
      "@adminvault/shared-services": [
        "./packages/libs/shared-services/src/index.ts"
      ]
    }
  }
}